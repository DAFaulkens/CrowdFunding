                   <option value="1">JYES</option>
                </field>
                
                <field name="display_follow" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_FOLLOW" description="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_FOLLOW_DESC" >
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
