                </field>
                <field name="display_end_date" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_END" description="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_END_DESC" >
