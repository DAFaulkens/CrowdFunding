		<fields name="params">
			<fieldset name="basic">
				<field name="display_short_desc" type="radio" default="1" label="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_SHORT_DESC" description="PLG_CONTENT_CROWDFUNDINGINFO_DISPLAY_SHORT_DESC_DESC" >
